@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #81818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
//oocss
.relative
	position relative	
.container
	font-size 0
	padding 1.4rem
	text-align center
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
.author
	color gris_claro
.center-text
	text-align center
.right-text
	text-align right
.center-block
	margin 0 auto
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden	
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		left 0
	.max
		right 0	
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto	
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%	
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
.header
	height 3.5em
	// a
	// 	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.song	
	display inline-block
	font-size 1rem	/*16px*/
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem	/*rem para la medida relativa del prox padre*/
	&:nth-child(even) /* elementos pares */
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .5em
	right .5em
	color gris_claro
	font-size 1.2em
	
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto //100%, respecto al ancho q tiene
	.playing
		&.medium
			width auto //100% cambia el ancho a lo del contenedor
	
@media screen and (min-width:1000px)
	body
		background gris_claro
	.button-menu
		display none
	.menu
		display block
		background gris_mas_claro
		overflow hidden //para que contenga los elementos con float
		.item
			float left
			list-style none
			a				
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
	.avatar
		width 38px
		height 38px		 
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after  //triangulo
			border-left 7px solid transparent
			border-right 7px solid transparent
			border-top 9px solid gris_claro
			content ""
			display inline-block
			margin-left .5em
			